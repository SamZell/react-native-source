#include_defs()函数用来执行当前构建文件上下文里面的构建文件风格的代码,避免在构建文件里复制粘贴代码
include_defs('//ReactAndroid/DEFS')

#android_library目标用来定义一系列的java文件。android_library规则的输出目标是一个包含了以及编译的class文件和资源文件的jar包
android_library(
  name = 'csslayout',#规则的名字
  srcs = glob(['csslayout/*.java']),#这个规则编译的java文件
  deps = [ #通常是另外一个android_library）用来生成编译这个android_library需要的classpath
    react_native_dep('java/com/facebook/proguard/annotations:annotations'),#在include_defs指向的文件里已经有定义:annotations就是一个src_target
    react_native_dep('libraries/soloader/java/com/facebook/soloader:soloader'),
    react_native_dep('third-party/java/infer-annotations:infer-annotations'),
    react_native_dep('third-party/java/jsr-305:jsr-305'),
  ],
  visibility = ['PUBLIC'],
)
#project_config指定需要生成配置文件的IDE
project_config(
  #src_target一个构建文件会 以它为基础构建项目。它必须是java_library(), java_test(), android_library(), or android_binary(). 中的一个。
  src_target = ':csslayout',
)
